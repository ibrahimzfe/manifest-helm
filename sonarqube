apiVersion: v1
kind: PersistentVolume
metadata:
  name: sonarqube-pv
spec:
  capacity:
    storage: 40Gi
  accessModes:
    - ReadWriteOnce
  storageClassName: openebs
  local:
    path: "/mnt/backup/sonarqube"
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
            - key: kubernetes.io/hostname
              operator: In
              values:
                - k8s-worker2
  persistentVolumeReclaimPolicy: Retain
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: sonarqube-pvc
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: openebs
  resources:
    requests:
      storage: 40Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sonarqube
  labels:
    name: sonarqube
spec:
  template:
    metadata:
      labels:
        name: sonarqube
    spec:
      containers:
      - name: sonarqube
        image: sonarqube:10-community
        ports:
        - containerPort: 9000
        volumeMounts:
          - name: sonarqube-data
            mountPath: /opt/sonarqube
      volumes:
        - name: sonarqube-data
          persistentVolumeClaim:
            claimName: sonarqube-pvc
  replicas: 1
  selector:
    matchLabels:
      name: sonarqube
---
apiVersion: v1
kind: Service
metadata:
  name: sonarqube-service
  labels:
    name: sonarqube-service
spec:
  type: ClusterIP
  ports:
  - port: 9000
  selector:
    name: sonarqube-lts
---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: sonarqube-ingress
  namespace: apps
spec:
  ingressClassName: nginx
  rules:
    - host: sonarqube-devsecops-k8s.adira.co.id
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: sonarqube-service
                port:
                  number: 9000

