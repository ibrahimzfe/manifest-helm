apiVersion: v1
kind: PersistentVolume
metadata:
  name: jenkins-lts-pv
spec:
  capacity:
    storage: 40Gi
  accessModes:
    - ReadWriteOnce
  storageClassName: openebs
  local:
    path: "/mnt/backup/jenkins-lts"
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
            - key: kubernetes.io/hostname
              operator: In
              values:
                - k8s-worker1
  persistentVolumeReclaimPolicy: Retain
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: jenkins-lts-pvc
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: openebs
  resources:
    requests:
      storage: 40Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: jenkins-lts
  labels:
    name: jenkins-lts
spec:
  replicas: 1
  selector:
    matchLabels:
      name: jenkins-lts
  template:
    metadata:
      labels:
        name: jenkins-lts
    spec:
      nodeSelector:
        kubernetes.io/hostname: k8s-worker1
      containers:
      - name: jenkins-lts
        image: jenkins/jenkins:lts-jdk21
        ports:
          - containerPort: 8080
        volumeMounts:
          - name: jenkins-lts-data
            mountPath: /var/jenkins_home
        securityContext:
          runAsUser: 0
          runAsGroup: 0
      volumes:
        - name: jenkins-lts-data
          persistentVolumeClaim:
            claimname: jenkins-lts-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: jenkins-lts-service
  labels:
    name: jenkins-lts-service
spec:
  type: ClusterIP
  ports:
  - port: 8080
  selector:
    name: jenkins-lts

